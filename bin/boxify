#!/bin/bash

. support/latest_platform_image.sh

vmname=$(smartos_vmname)

mkdir -p pkg

vagrant box remove ${vmname}
rm -f pkg/${vmname}.box

echo -e "What should we call the box? [${vmname}] "
read boxname

if [ -z "$boxname" ]; then
  boxname=${vmname}
fi

vagrant package --base ${vmname} --output pkg/${boxname}.box
vagrant box add ${boxname} pkg/${boxname}.box

