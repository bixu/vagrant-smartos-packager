echo "*************************************************************"
echo "Updating system to allow user modification"
mkdir -p /opt/custom/smf
mkdir -p /opt/custom/method

curl --silent -k https://raw.github.com/sax/vagrant-smartos-packager/master/files/install-userfiles -o /opt/custom/method/install-userfiles
curl --silent -k https://raw.github.com/sax/vagrant-smartos-packager/master/files/install-userfiles.xml -o /opt/custom/smf/install-userfiles.xml

curl --silent -k https://raw.github.com/sax/vagrant-smartos-packager/master/files/persist-userfiles -o /opt/custom/method/persist-userfiles
curl --silent -k https://raw.github.com/sax/vagrant-smartos-packager/master/files/persist-userfiles.xml -o /opt/custom/smf/persist-userfiles.xml

chmod -R +x /opt/custom/method

echo "*************************************************************"
echo "In order to use tools such as usermod, please do the following:"
echo "  svcadm disable -s persist-userfiles"
echo "  useradd ..."
echo "  svcadm enable -s persist-userfiles"
echo
echo
echo "*************************************************************"
echo "Now reboot to ensure that everything is kosher."
